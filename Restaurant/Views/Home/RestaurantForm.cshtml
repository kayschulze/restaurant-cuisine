<h1>Restaurant Form</h1>

<form action="/restaurants" method="post">
    <label for="new-name">Name</label>
    <input id="new-name" name="new-name" type="text">

    <label for="new-cuisine">Cuisine</label>
    <input id="new-cuisine" name="new-cuisine" type="text">

    <label for="new-address">Address</label>
    <input id="new-address" name="new-address" type="text">

    <label for="new-rating">Rating</label>
    <input id="new-rating" name="new-rating" type="text">

    <label for="new-specialty">Specialty</label>
    <input id="new-specialty" name="new-specialty" type="text">

    <button type="submit">Add Restaurant</button>
</form>
